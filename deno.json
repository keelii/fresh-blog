{
  "tasks": {
    "dev": "deno run -A --unstable-kv --env-file=.dev.env --watch=.dev.env,blog main.ts",
    "start": "deno run -A --env-file=.prd.env main.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "lint": {
    "files": {
      "exclude": ["*.ts", "*.tsx", "utils/", "routes/", "static/", "content/"]
    },
    "rules": {}
  },
  "fmt": {
    "files": {
      "include": ["component/", "config/", "routes/", "utils", "*.ts"],
      "exclude": ["fresh.gen.ts"]
    },
    "options": {
      "lineWidth": 120
    }
  },
  "imports": {
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "react-dom/server": "npm:react-dom@^19.1.1/server"
  }
}
