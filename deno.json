{
  "tasks": {
    "start": "deno run -A --unstable --watch=config/,blog/,static/,routes/ dev.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "lint": {
    "files": {
      "exclude": ["*.ts", "*.tsx", "utils/", "routes/", "static/", "content/"]
    },
    "rules": {}
  },
  "fmt": {
    "files": {
      "include": ["component/", "config/", "routes/", "utils", "*.ts"],
      "exclude": ["fresh.gen.ts"]
    },
    "options": {
      "lineWidth": 120
    }
  }
}
